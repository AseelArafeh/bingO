<div class="root" style="background: url(../img/background-login.png);background-position: top;background-size: cover;background-attachment: fixed;">
    <div class="container login">
        <div class="logo">
            <img id="bingo-logo" src="../img/bingo-logo.png" alt="">
        </div>
        
        <form  action="/admin/login" method="post">
            <div class="form-group">
                <input type="text" name="adminName" id="adminName" class="form-control" placeholder="&#xF007;   Username" style="font-family:Arial, FontAwesome" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="&#xF023;   Password" style="font-family:Arial, FontAwesome" required>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary shadow">Login</button>
            </div>
        </form>
        
    </div>
</div>